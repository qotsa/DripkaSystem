<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://camel.apache.org/schema/spring">

    <route id="toUfos" errorHandlerRef="transactionErrorHandlerBuilder">
        <from uri="{{routes.toUfos.inboundQueue}}"/>
        <transacted ref="PROPAGATION_REQUIRED"/>
        <to uri="{{routes.toUfos.log}}"/>
        <!--<throwException ref="zombieApocalipse"/>-->
        <to uri="{{routes.toUfos.outboundQueue}}"/>
    </route>

    <route id="test" errorHandlerRef="transactionErrorHandlerBuilder">
        <from uri="scheduler://foo?initialDelay=10s&amp;delay=10s"/>
        <transacted ref="PROPAGATION_REQUIRES_NEW"/>
        <to uri="{{routes.toUfos.inboundQueue}}"/>
    </route>

</routes>